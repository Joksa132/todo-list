generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String
  image     String
  tasks     Task[]
  taskLists TaskList[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  dueDate     DateTime
  completed   Boolean  @default(false)
  taskList    TaskList @relation(fields: [taskListId], references: [id])
  taskListId  Int
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
}

model TaskList {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  tasks     Task[]
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}
